<body>
  <div align="center">
    <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
      <tbody>
        
        <tr>
          <body>
              <td id="notice"><%= notice %></td>
          </body>
        </tr>
        
        <% if user_signed_in? && current_user.name = @user.name %>
          <tr>
            <td>
              <%= render 'form', user: @user %>
            </td>
          </tr>
        <% else %>
          <tr>
            <td>user:</td>
            <td><%=@user.name%></td>
          </tr>
          
          <tr>
            <td>created:</td>
            <td><%=distance_of_time_in_words(@user.created_at, Time.new)%></td>
          </tr>
          
          <tr>
            <td>karma:</td>
            <td><%=@user.karma%></td>
          </tr>
          
          <tr>
            <td>about:</td>
            <td><%=@user.about%></td>
          </tr>
          
          <tr>
            <td></td>
            <td><%= link_to "submissions", "/submitted?id="+@user.name%></td>
          </tr>
          
          <tr>
            <td></td>
            <td><%= link_to "comments", "/threads?id="+@user.name%></td>
          </tr>
        <% end %>
        
      </tbody>
    </table>
  </div>
</body>

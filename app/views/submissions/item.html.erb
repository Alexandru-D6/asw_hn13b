<html lang="en" op="item">
   <body>
      <center>
         <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
            <tbody>
               <%= notice %>
            </tbody>
         </table>
         
         <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
            
            <tr id="pagespace" title="" style="height:10px"></tr>
            
            <tr>
               <td>
                  <table class="fatitem" border="0">
                     <tbody>
                        <% count = -1 %>
                        <% countURL = 0 %>
                        
                        
                        <%= render 'submission', submission: @submission, count: count, url: '/item?id='+@submission.id.to_s, countURL: countURL %>
                        
                        
                        <tr style="height:10px"></tr>
                        
                        <tr>
                           <td colspan="2"></td>
                           <td>
                              <% if @submission.author_username != "" %>
                                 <%= render '/comments/form', comment: Comment.new, id_submission: @submission.id, id_father: 0%>
                              <% end %>
                           </td>
                        </tr>
                        
                        <tr>
                           <td>
                              <% @submission.comments.each do |comment|%>
                                 <%= render '/comments/comment_tree', comment: comment, title_submission: @submission.title, id_submission: @submission.id, id_father: 0%>
                              <% end %>
                           </td>
                        </tr>
                     </tbody>
                  </table>
                  
                  <br><br>
               
               </td>
            </tr>
         
            <tr>
               <td>
                  <%= render 'bottomURL'%>
               </td>
            </tr>
            
         </table>
      </center>
   </body>
   <script type='text/javascript' src='hn.js?QZejSKY7mNWXnObVdaSN'></script>
</html>
<%= form_with(model: submission) do |form| %>

  <tr style="display:none;"><%= form.text_field :title, value: "666"%></tr>
  
  <table>
    <td width=5%></td>
    <td width=90%>
    <table width= 100% cellpadding="2" cellspacing="10" bgcolor="#f6f6ef">
      <tr>
        <body>
          <td></td>
          <% if submission.errors.any? %>
            <td><%= submission.errors.first.message %></td>
          <% end %>
        </body>
      </tr>
      <tr>
        <tbody>
          <tr>
            <td>title</td>
            <td><%= form.text_field :title, size: "70x1" %></td>
          </tr>
          <tr>
            <td>url</td>
            <td><%= form.text_field :url, size: "70x1" %></td>
          </tr>
          <tr>
            <td></td>
            <td><b>or</b></td>
          </tr>
          <tr>
            <td>text</td>
              <td><%= form.text_field :text, size: "70x5" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= form.submit 'submit' %></td>
          </tr>
        </tbody>
      </tr>
      <br>
      <tr>
        <body>
          <tr>
            <td></td>
            <td>Leave url blank to submit a question for discussion. If there is no url, the text (if any) will appear at the top of the thread.</td>
          </tr>
          <tr>
            <td></td>
            <td>You can also submit via <a href='/enlace'>bookmarklet</a></td>
          </tr>
        </body>
      </tr>
    </table>
    </td>
    <td width=5%></td>
  </table>

<% end %>